<div class="jumbotron">
  <h1 class="container col-md-6 offset-md-3">Simple Validation</h1>
</div>
<div class="container"> 
  <div class="row">
    <div class="col-md-6 offset-md-3 " >
      <%= form_with(model: @post, local: true, id: "contact-form") do |form| %>
        <div class="form-group " >
          <%= form.label :name , "お名前（必須）" %>
          <%= form.text_field :name ,class: "form-control ", id: "name"%>
          <div id ="name-error" >
          </div>
        </div>
        <div class="form-group">
          <%= form.label :email , "メールアドレス（必須）" %>
          <%= form.text_field :email , class: "form-control " ,id: "email" %>
          <div id="email-error"> 
          </div>
        </div>
        <div class="form-group">
          <%= form.label :content , "内容（必須）" %>
          <%= form.text_area :content , class: "form-control ", rows: "6" , id: "content" %>
          <div id="content-error">
          </div>
        </div>
        <div class="form-check">
          <%= form.check_box class: "form-check-input" %>
          <%= form.label "プライバシーポリシーに同意する" ,class: "form-check-label" %>
        </div>
        <div class="form-group">
          <%= form.submit "送信する" , class: "btn btn-lg btn-primary  ", id: "submit"  %>
        </div>
      <% end %>
    </div>
  </div>
</div>