<div class="jumbotron">
  <h1 class="container col-md-6 offset-md-3">Simple Validation</h1>
</div>
<div class="container"> 
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <%= form_with(model: @tweet, local: true) do |form| %>
        <div class="form-group " >
          <%= form.label :name , "お名前（必須）" %>
          <%= form.text_field :name ,class: "form-control"%>
          <div class="invalid-feedback">
            お名前が入力されていません
          </div>
        </div>
        <div class="form-group">
          <%= form.label :email , "メールアドレス（必須）" %>
          <%= form.text_field :email , class: "form-control" %>
          <div class="invalid-feedback">
            メールアドレスが入力されていません
          </div>
        </div>
        <div class="form-group">
          <%= form.label :content , "内容（必須）" %>
          <%= form.text_area :content , class: "form-control ", rows: "6" %>
          <div class="invalid-feedback">
            内容が入力されていません
          </div>
        </div>
        <div class="custom-control custom-checkbox">
          <%= form.check_box class: "custom-control-input"  %>
          <%= form.label "プライバシーポリシーに同意する" %>
        </div>
        <div class="form-group">
          <%= form.submit "送信する" , class: "btn btn-lg btn-primary col-md-3 offset-md-5 mt-4 py-3 px-4 ", disabled: "true"  %>
        </div>
      <% end %>
    </div>
  </div>
</div>